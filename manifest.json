{
    "name": "Color Selector",
    "description": "Grabs color from any point of an active window and stores its Hex value in clipboard.",
    "version": "1.0",
    "manifest_version": 3,
    "background":{
        "service_worker": "background.js"
    },
    "action":{
        "default_popup": "popup.html"
    },
    "icons":{
        "16":"/images/picker_16.png",
        "32": "/images/picker_32.png",
        "48": "/images/picker_48.png"
    },
    "permissions":[
        "activeTab",
        "scripting"
    ]
}